.sign-in
  display: flex
  flex-direction: column
  background: accentColor
  align-self: center
  width: rem(276)
  padding: rem(36)
  height: 50%
  box-shadow: 0px 0px 10px rgba(0,0,0,.3)

  .sign-in-header
    display: flex
    flex-direction: column

    .sign-in-welcome-text
      color: fontColor
      font-size: rem(24)
      text-align: left
      margin-bottom: rem(24)

    .sign-in-title
      font-size: rem(24)
      text-align: left


      span
        color: fontSecondaryColor

  .sign-in-form
    display: flex
    flex: 1
    margin-top: rem(36)
    margin-bottom: rem(36)
    flex-direction: column
    align-items: flex-start

    .sign-in-field-wrapper
      width: 100%
      margin-bottom: rem(12)

    .sign-in-submit-wrapper
      width: 100%
      margin-top: rem(24)
      text-align: left

  .sign-in-footer
    color:fontSecondaryColor

    a
      color: fontSecondaryColor
      font-weight: bold
      text-decoration: none
