.input
  display: flex
  flex-direction: column
  width: 100%

  .input-field
    width:100%
    padding: 1rem
    padding-left: 0
    margin-top: 0
    border: none
    outline: none
    font-size: 1.5rem
    color: actionColor

  .input-marker
    transition: width 0.3s
    border-bottom: 1.5px solid borderColor
    width: 0

    &.active
      width: 100%
